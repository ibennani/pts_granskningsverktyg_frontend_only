{
  "name": "modulbaserad-kod-v02",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:fixedport": "vite --port 5173 --strictPort",
    "prebuild": "npm run lint && npm run validate:imports && npm run validate:components && npm run validate:css",
    "build": "npm run prebuild && vite build && node scripts/postbuild-final.js",
    "preview": "vite preview --port 4173 --strictPort --open",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "PWDEBUG=1 playwright test",
    "watch:e2e": "concurrently -k -n DEV,TEST \"npm:dev:fixedport\" \"chokidar 'src/**/*' -c 'playwright test' --throttle 200\"",
    "postinstall": "playwright install",
    "lint": "eslint . --ext .js --max-warnings=0",
    "format:check": "prettier js/components/UploadViewComponent.js tests/unit/home.ui.spec.js tests/home.e2e.spec.js eslint.config.js jest.config.js playwright.config.js package.json README.md --check",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --passWithNoTests --runInBand",
    "e2e:live": "playwright test",
    "validate:imports": "node scripts/validate-imports.js",
    "validate:components": "node scripts/validate-components.js",
    "validate:css": "node scripts/validate-css.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "axe-core": "^4.11.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.0.1",
    "eslint": "^9.37.0",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^29.7.0",
    "jest-axe": "^9.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.6.2",
    "vite": "^7.1.7"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@fontsource/roboto": "^5.2.8",
    "@fortawesome/fontawesome-free": "^7.1.0",
    "codex": "^0.2.3",
    "docx": "^9.5.1",
    "exceljs": "^4.4.0",
    "jsdom": "^27.0.0",
    "marked": "^16.4.1"
  }
}
